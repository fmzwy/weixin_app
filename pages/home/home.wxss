page{
    height:100%;
    width:100%;
}
/*顶部搜索条*/
.top-search{
    position:fixed;
    left:0;
    right:0;
    top:0;
    z-index:1000;
}
.search-box{
    
}
.search-input{
    box-sizing:border-box;
    width:70%;
    height:60rpx;
    line-height: 60rpx;
    margin:16rpx auto; 
    padding:0 10rpx;
    background:#fff;
    border-radius:30rpx;
    font-size:28rpx;
    color:#aaa;
}
.search-input icon,.search-input text{
    margin-left:16rpx;
}
/*上下滚动*/
.full-screen{
    height:100%;
}
